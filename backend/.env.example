# CORE-SE Demo Backend Configuration

# Application mode
MODE=demo

# Database
DATABASE_URL=sqlite:///./core_demo.db

# External services
FDS_BASE_URL=http://localhost:8001

# OpenAI API for AI microcalls
OPENAI_API_KEY=your-openai-api-key-here

# Demo authentication
DEMO_AUTH_TOKEN=demo-token-123

# Feature flags
FEATURE_EMAIL=true
FEATURE_WINDCHILL=true
FEATURE_OUTLOOK=true
FEATURE_AI_MICROCALLS=true
FEATURE_TRACE_GRAPH=true
FEATURE_THEMES=true

# AI settings
OPENAI_MODEL=gpt-4o-mini
AI_TIMEOUT=30

# Cache settings (seconds)
CACHE_TTL_PULSE=300
CACHE_TTL_IMPACT=600
